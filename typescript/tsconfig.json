{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "incremental": true,
        "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "**/*.test.*",
        "**/*.spec.*",
        "**/__tests__/**"
    ]
}